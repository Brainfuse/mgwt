 <module>
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='de.kurka.gwt.mobile.dom.DOM'/>
    
    
    <define-property name="mgwt.os" values="iphone, ipad, android, desktop" />
	<property-provider name="mgwt.os"><![CDATA[
  	{
	    var ua = window.navigator.userAgent.toLowerCase();
	    
	    if(ua.indexOf('android') != -1)
	    {
	    	return "android";
	    }
	    
	    if(ua.indexOf('ipad') != -1)
	    {
	    	return "ipad";
	    }
	    
	    if(ua.indexOf('iphone') != -1)
	    {
	    	return "iphone";
	    }
	
	    return "desktop";
  	}
]]></property-provider>


<generate-with class="de.kurka.gwt.mobile.ui.generator.FeatureDetectionGenerator">
        <when-type-assignable class="de.kurka.gwt.mobile.ui.client.FeatureDetection"/>
</generate-with>


    
   
  	<source path="client"/>
</module>